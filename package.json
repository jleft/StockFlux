{
  "name": "StockFlux",
  "description": "Hosts BitFlux as an OpenFin application.",
  "version": "10.1.0",
  "private": true,
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScottLogic/StockFlux.git"
  },
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=development webpack-dev-server -d --config webpack/webpack.config.js",
    "openfin:dev": "node openfin-dev-launcher.js",
    "openfin:prod": "node openfin-prod-launcher.js",
    "build": "npm run clean && cross-env NODE_ENV=production webpack -p --config webpack/webpack.config.js",
    "build:deploy": "npm run build && node openfin-config/updateOpenFinConfigForDeployment.js",
    "serve": "http-server -p 5001",
    "prod": "npm run build && npm run serve",
    "clean": "rimraf public/*",
    "ci": "npm run lint && npm run test:coverage && npm run build",
    "lint": "eslint *.js src/ test/",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env BABEL_ENV=test NODE_ENV=test karma start test/karma.conf.js",
    "test:coverage": "cross-env BABEL_ENV=test-coverage NODE_ENV=production karma start test/karma.coverage.conf.js",
    "postinstall": "cd node_modules/BitFlux && npm i && grunt build:module",
    "remotedev": "remotedev --hostname=localhost --port=9090",
    "release": "npm run ci && npm version"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-rewire": "^1.0.0-rc-3",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.8.0",
    "babel-template": "^6.9.0",
    "babel-types": "^6.9.1",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "fetch-mock": "^5.0.5",
    "file-loader": "^0.8.5",
    "grunt-cli": "^1.2.0",
    "http-server": "^0.9.0",
    "isparta": "^4.0.0",
    "json-loader": "^0.5.4",
    "karma": "^1.2.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "less": "^2.6.1",
    "less-loader": "^2.2.3",
    "mocha": "^2.4.5",
    "mocha-webpack": "^0.4.0",
    "nock": "^8.0.0",
    "null-loader": "^0.1.1",
    "openfin-config-builder": "^1.0.8",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "redux-mock-store": "^1.1.0",
    "remote-redux-devtools": "^0.3.3",
    "remotedev-server": "^0.1.2",
    "rimraf": "^2.5.3",
    "script-loader": "^0.7.0",
    "semver": "^5.1.0",
    "sinon": "^1.17.5",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.15",
    "webpack-config": "^5.1.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "BitFlux": "github:scottlogic/BitFlux#1.6.1",
    "babel-polyfill": "^6.3.14",
    "classnames": "^2.2.3",
    "d3fc": "^5.3.0",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.1.1",
    "jquery": "^1.11.1",
    "lodash.defaults": "^4.2.0",
    "malihu-custom-scrollbar-plugin": "^3.1.3",
    "moment": "^2.13.0",
    "openfin-launcher": "^0.1.8",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.4",
    "redux": "^3.4.0",
    "redux-localstorage": "^0.4.1",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.1",
    "reselect": "^2.5.3"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
